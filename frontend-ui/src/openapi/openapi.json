    "components": {
        "schemas": {
            "User": {
                "required": [
                    "password",
                    "role",
                    "status",
                    "username"
                ],
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "username": {
                        "maxLength": 50,
                        "minLength": 3,
                        "type": "string"
                    },
                    "password": {
                        "maxLength": 2147483647,
                        "minLength": 6,
                        "type": "string"
                    },
                    "role": {
                        "type": "string",
                        "enum": [
                            "ADMIN",
                            "AGENT",
                            "SHAREHOLDER"
                        ]
                    },
                    "referenceId": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "ACTIVE",
                            "INACTIVE",
                            "SUSPENDED",
                            "PENDING_VERIFICATION"
                        ]
                    }
                }
            },
            "Agent": {
                "required": [
                    "name",
                    "nidCard",
                    "nominee",
                    "phone",
                    "village",
                    "zila"
                ],
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "name": {
                        "maxLength": 100,
                        "minLength": 2,
                        "type": "string"
                    },
                    "phone": {
                        "maxLength": 15,
                        "minLength": 10,
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "zila": {
                        "type": "string"
                    },
                    "village": {
                        "type": "string"
                    },
                    "nidCard": {
                        "type": "string"
                    },
                    "photo": {
                        "type": "string"
                    },
                    "nominee": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string"
                    },
                    "joinDate": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "Shareholder": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "name": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "nidCard": {
                        "type": "string"
                    },
                    "nominee": {
                        "type": "string"
                    },
                    "zila": {
                        "type": "string"
                    },
                    "house": {
                        "type": "string"
                    },
                    "investment": {
                        "type": "number",
                        "format": "double"
                    },
                    "totalShare": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "earning": {
                        "type": "number",
                        "format": "double"
                    },
                    "role": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string"
                    },
                    "joinDate": {
                        "type": "string",
                        "format": "date"
                    }
                }
            },
            "Installment": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "product": {
                        "$ref": "#/components/schemas/Product"
                    },
                    "member": {
                        "$ref": "#/components/schemas/Member"
                    },
                    "totalAmount": {
                        "type": "number",
                        "format": "double"
